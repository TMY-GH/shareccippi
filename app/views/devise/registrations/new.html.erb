<div class="user-wrapper">
  <div class="user-container">

    <div class="header-name">
      <h2>アカウントの作成</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nick_name, "ユーザー名" %>（一般公開）<br>
        <%= f.text_field :nick_name, autofocus: true, placeholder: "例）山田 太郎" %>
      </div>

      <div class="field">
        <%= f.label :user_name, "ユーザーID" %> ※ログインで必要です(非公開)<br />
        <%= f.text_field :user_name, autofocus: true, placeholder: "半角英数字の組み合わせ:４〜１６文字" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>※ログインで必要です(非公開)<br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "６文字以上の半角英数字" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "確認用のパスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class: "submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>